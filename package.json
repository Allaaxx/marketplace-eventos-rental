{
  "name": "marketplace-eventos-rental",
  "version": "1.0.0",
  "private": true,
  "description": "Marketplace de locação de decoração para eventos",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "bun --filter=@marketplace/backend run dev",
    "dev:backend": "cd apps/backend && bun run dev",
    "build": "bun run build:backend",
    "build:backend": "cd apps/backend && bun run build",
    "install:backend": "cd apps/backend && bun install",
    "db:generate": "cd apps/backend && bun run db:generate",
    "db:migrate": "cd apps/backend && bun run db:migrate",
    "db:studio": "cd apps/backend && bun run db:studio",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose down && docker-compose up -d",
    "clean": "rm -rf node_modules apps/*/node_modules apps/*/.next apps/*/dist"
  },
  "devDependencies": {
    "@types/bun": "^1.1.14",
    "prettier": "^3.3.3",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "packageManager": "bun@1.3.4"
}
